
#commit_container



:javascript
  series = #{[{data: @series}].to_json}
  year = #{@date.first}
  month = #{@date[1]}
  day = #{@date.last}

:coffee
  $ ->
    myChart = Highcharts.chart('commit_container',
      chart: type: 'column'
      plotOptions: series: pointStart: Date.UTC(year, month, day) , pointIntervalUnit: 'day'
      xAxis: type: 'datetime'
      yAxis: title: text: 'Commits'
      series: series
      )
    return
