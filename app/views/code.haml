#commit_container



:javascript
  series = #{[{data: @series, color: "#444"}].to_json}
  year = #{@date.first}
  month = #{@date[1]}
  day = #{@date.last}

:coffee
  $ ->
    myChart = Highcharts.chart('data-daily-commits',
      chart: type: 'column'
      plotOptions: series: pointStart: Date.UTC(year, month, day) , pointIntervalUnit: 'day'
      xAxis:
        type: 'datetime'
        labels:
          rotation: -45
      yAxis:
        title:
          rotation: -45
          text: 'Commits'
          align: "high"
      tooltip:
        formatter: ->
          this.y + ' commits on '+ new Date(this.x).toDateString()
      series: series
      )
    return
